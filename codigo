import java.util.Scanner;

public class EresElCreador {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        System.out.println("¿Eres el creador? (sí = true, no = false): ");
        boolean esCreador = scanner.nextBoolean();

        if (esCreador) {
            System.out.println("¡Bienvenido, creador!");
        } else {
            System.out.println("Acceso denegado. No eres el creador.");
        }

        scanner.close();
    }
}
